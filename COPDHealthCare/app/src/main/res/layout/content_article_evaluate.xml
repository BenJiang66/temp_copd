<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="評估是否患有慢性阻塞性肺疾病 ( COPD )，先詢問相關抽煙或工作史 (工作時需曝露在有害的微塵粒子中) 並搭配相關量表來評估，相關量表可使用："
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      (1)修正版英國醫學研究委員會問卷(簡稱mMRC )，以呼吸困難程度計分，分成0-4分，分數愈高症狀愈嚴重。"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      (2) 慢性阻塞性肺疾病評估測試 (簡稱CAT )，共八題，每題0-5分，總計40分，分數愈高症狀愈嚴重。"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/evaluate1" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>